<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ado.edu.pucmm.rancherasystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/ranchera"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".BillDetailActivity"></activity>
        <activity android:name=".ListOfBills" />
        <activity
            android:name=".MainActivity"
            android:label="FlujoClientes_Productos"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ConsultarCliente" />
        <activity android:name=".Productos" />
        <activity android:name=".DashBoardActivity" />
        <activity
            android:name=".ForgotActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SupportActivity" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfirmacionOrden"
            android:label="Ranchera"
            android:parentActivityName=".ResumenOrden"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ResumenOrden" />
        </activity>
        <activity
            android:name=".ResumenOrden"
            android:label="Ranchera"
            android:parentActivityName=".SeleccionarProducto"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SeleccionarProducto" />
        </activity>
        <activity
            android:name=".SeleccionarProducto"
            android:label="Ranchera"
            android:parentActivityName=".ConsultarClientes"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ConsultarClientes" />
        </activity>
        <activity
            android:name=".ConsultarClientes"
            android:label="@string/ranchera"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>